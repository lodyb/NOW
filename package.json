{
  "name": "now-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for media collection and quiz games",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start dist/index.js --name now",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "normalize": "ts-node --transpile-only -r tsconfig-paths/register --compiler-options '{\"experimentalDecorators\":true,\"emitDecoratorMetadata\":true}' src/cli/normalize.ts all",
    "normalize:file": "ts-node --transpile-only -r tsconfig-paths/register --compiler-options '{\"experimentalDecorators\":true,\"emitDecoratorMetadata\":true}' src/cli/normalize.ts file",
    "normalize:verbose": "npm run normalize -- --verbose",
    "preinstall": "echo 'Please make sure you have build tools installed: sudo apt-get install build-essential python3'",
    "api": "node server.js",
    "api:pm2": "pm2 start server.js --name now-api"
  },
  "keywords": [
    "discord",
    "bot",
    "media",
    "quiz",
    "ffmpeg"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@discordjs/voice": "^0.16.0",
    "commander": "^11.1.0",
    "discord.js": "^14.11.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "fuse.js": "^6.6.2",
    "libsodium-wrappers": "^0.7.15",
    "multer": "^1.4.5-lts.1",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "winston": "^3.8.2"
  },
  "optionalDependencies": {
    "@discordjs/opus": "^0.9.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.3",
    "@types/pg": "^8.6.6",
    "@types/qs": "^6.9.18",
    "@types/range-parser": "^1.2.7",
    "@types/send": "^0.17.4",
    "@types/serve-static": "^1.15.7",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
